<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/color_strip"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/script_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/script_grye"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_script_type"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="-15dp"
            android:src="@drawable/security"
            android:tint="@color/script_grey_icon" />

        <TextView
            android:id="@+id/txt_script_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="45dp"
            android:gravity="center"
            android:text="Cleanup Desktop"
            android:textColor="@color/field_inactive"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_script_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dimen_3"
        android:padding="@dimen/dimen_20"
        android:text="Pc running slow? Use this script to speed up your PC - clean temporar files and keep your desktop running smoothly"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txt_script_config"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/script_grye"
        android:gravity="center"
        android:text="No Configuration Required"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_run_script"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/white_button_black_line"
        android:text="@string/run_this_task"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>
